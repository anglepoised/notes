---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import FormattedDate from "../../components/FormattedDate.astro";
type Props = CollectionEntry<"images">["data"];
const { title, pubDate, updatedDate, image } =
  Astro.props;
---

<!doctype html>
<html lang="en-gb">
  <head>
    <BaseHead title={title} />
    <style>
      .title {
        font-size: 2em;
        margin: 0.25em 0 0;
      }
      hr {
        border-top: 1px solid #ddd;
        margin: 1rem 0;
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <article class="h-entry">
        <h1 class="p-name title">{title}</h1>
        <a class="permaLink u-url" href={Astro.url}>
          <FormattedDate date={pubDate} type="published" />
        </a>
        {
          updatedDate && updatedDate != pubDate ? (
            <div>
              Last updated on{" "}
              <FormattedDate date={updatedDate} type="updated" />
            </div>
          ) : null
        }
        <hr />
        {
          image.target ? (
            <a href={image.target}>
              <img src={image.src} alt={image.alt} />
              {title}
            </a>
          ) : (
            <img src={image.src} alt={image.alt} />
          )
        }
        <div class="e-content">
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>

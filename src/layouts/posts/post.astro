---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
const { frontmatter } = Astro.props;
const dateOptions: Intl.DateTimeFormatOptions = {
  weekday: "long",
  year: "numeric",
  month: "long",
  day: "numeric",
};
const pubDateLocal = new Date(frontmatter.datePublished).toLocaleDateString(
  "en-GB",
  dateOptions,
);
const updatedDateLocal = new Date(frontmatter.dateUpdated).toLocaleDateString(
  "en-GB",
  dateOptions,
);
const WaybackUrl = "http://web.archive.org/web/" + Astro.url;
const GitHubUrl = "https://github.com/anglepoised/notes/edit/main/src/pages" + Astro.url.pathname + "/index.mdx";

export interface Props {
  content: {
    title: string;
    description: string;
    datePublished?: string;
    dateUpdated?: string;
    pathname?: string;
    heroImage?: string;
    originalUrl?: string;
  };
}

const {
  content: { title, description, datePublished, dateUpdated, originalUrl, pathname, heroImage },
} = Astro.props;
---

<!doctype html>
<html lang="en-gb">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      .title {
        font-size: 2em;
        margin: 0.25em 0 0;
      }
      hr {
        border-top: 1px solid #ddd;
        margin: 1rem 0;
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <article class="h-entry">
        {heroImage && <img width={720} height={360} src={heroImage} alt="" />}
        <h1 class="p-name title">{title}</h1>
        {
          pubDateLocal ? (
            <a class="permaLink u-url" href={Astro.url}>
              <time class="dt-published" datetime={datePublished}>
                {pubDateLocal}
              </time>
            </a>
          ) : null
        }
        {
          updatedDateLocal && updatedDateLocal != pubDateLocal ? (
            <div>
              Last updated on{" "}
              <time class="dt-updated" datetime={dateUpdated}>
                {updatedDateLocal}
              </time>
            </div>
          ) : null
        }
        <hr />
        <div class="e-content">
          <slot />
        </div>
        <ul>
          <li>
            <a href={WaybackUrl}>Wayback</a>
          </li>
          <li>
            <a href={GitHubUrl}>Edit on GitHub</a>
          </li>
          {
            originalUrl ? (
              <li>
                <a href={originalUrl}>{originalUrl}</a>
              </li>
              ) : null
          }
        </ul>
      </article>
    </main>
    <Footer />
  </body>
</html>

{
  "name": "anglepoised-notes",
  "version": "1.0.0",
  "description": "Anglepoised Notes blog",
  "author": "Paul Love <paul@anglepoised.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:anglepoised/notes.git"
  },
  "bugs": {
    "url": "https://github.com/anglepoised/notes/issues"
  },
  "homepage": "https://anglepoised.com/",
  "engines": {
    "node": "16.17.0"
  },
  "packageManager": "yarn@1.22.18",
  "private": true,
  "dependencies": {
    "@astrojs/mdx": "^0.11.3",
    "@astrojs/rss": "^1.0.2",
    "@astrojs/sitemap": "^1.0.0",
    "astro": "^1.4.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@netlify/plugin-lighthouse": "^3.6.0",
    "commitizen": "^4.2.5",
    "husky": "^8.0.1",
    "hygen": "^6.2.11",
    "lint-staged": "^13.0.3",
    "netlify-plugin-html-validate": "^1.1.1",
    "npm-run-all": "^4.1.5",
    "npm-scripts-info": "^0.3.9",
    "prettier": "^2.7.1",
    "prettier-plugin-astro": "^0.5.5"
  },
  "main": "n/a",
  "scripts": {
    "?build": "Run all build tasks.",
    "build": "npm-run-all build:*",
    "?build:astro": "Build static version of Astro site for distribution.",
    "build:astro": "astro build",
    "postbuild": "yarn internal:prettier --write \"dist/**/*.html\"",
    "precz": "yarn run lint-changes",
    "?cz": "Commit with commitizen",
    "cz": "git-cz",
    "?dev": "Start Astro development server.",
    "dev": "astro dev",
    "?format": "Runs all code formatters.",
    "format": "yarn internal:prettier \"./*.{js,json,md,mdx}\" \"./**/*.{js,json,md,mdx}\" --write",
    "?info": "Display information about the scripts.",
    "info": "npm-scripts-info",
    "internal:prettier": "prettier",
    "?lint-changes": "Lints any changes that are currently staged in git",
    "lint-changes": "lint-staged",
    "?lint": "Lint all files",
    "lint": "npm-run-all lint:*",
    "lint:commits": "./node_modules/.bin/commitlint --from=origin/main",
    "lint:format": "yarn internal:prettier --list-different \"./*.{js,json,md,mdx}\" \"./**/*.{js,json,md,mdx}\"",
    "?post": "Generate a new post scaffold",
    "post": "hygen post new",
    "?preview": "Serve built Astro site.",
    "preview": "astro preview",
    "?start": "Run development server",
    "start": "yarn run dev",
    "?test": "Run tests.",
    "test": "echo \"Write tests!\"",
    "prepare": "husky install"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,json}": "yarn internal:prettier --list-different",
    "*.{md,mdx}": "yarn internal:prettier --list-different"
  }
}
